<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/Orange"
            android:padding="10dp">

            <ImageView
                android:onClick="kembali"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:id="@+id/kembali"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kustomisasi"
                android:textColor="@color/colorWhite"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#bbb"/>

        </FrameLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".CustomActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Kategori:"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/kategori"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/pilih_kategori" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Bahan:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/bahan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/bahan" />

            </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp">
                <View android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#bbb"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Ukuran:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Panjang:"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/lebar"
                        android:layout_width="80dp"
                        android:hint="4"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="/Meter"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Lebar"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/lebar"
                        android:layout_width="80dp"
                        android:hint="2"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="/Meter"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Tinggi"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/tinggi"
                        android:layout_width="80dp"
                        android:hint="3"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="/Meter"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Warna:"
                        android:textSize="20dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="hitam"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#bbb"/>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Pesanan:"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:hint="3"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Buah"
                            android:textSize="20dp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <View android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#bbb"/>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesan Khusus"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsikan custom anda yang mungkin tidak ada di pilihan jenis barang"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_pilih"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="pilih gambar"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/btn_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@color/colorPrimary"
            android:layout_marginStart="100dp"
            android:textColor="#eeee"
            android:layout_marginEnd="100dp"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>

