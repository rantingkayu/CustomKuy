<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/depan"
        android:layout_gravity="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bbb"/>
    </FrameLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".CustomActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/iklan"
                android:layout_gravity="center"/>




            <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsikan selera mu miliki barang-barang rumahmu seperti apa yang kamu inginkan"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20dp"
        android:layout_marginTop="1dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="20dp"/>

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="CUSTOM "
        android:textColor="#eeee"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>




</LinearLayout>
    </ScrollView>
</LinearLayout>